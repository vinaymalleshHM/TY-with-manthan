package com.testyantra.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import com.testyantra.infobean.MusicFilesInfoBean;

public class MusicFilesDAOImpl implements MusicFilesDAO {

	@Override
	public MusicFilesInfoBean playAllSong() {

		Connection con = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		MusicFilesInfoBean musicFilesInfoBean = null;

		try {
			Class.forName("com.mysql.jdbc.Driver");
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/elf_employee_info","root","root");
			String query = "select * from musicfiles";
			pstmt = con.prepareStatement(query);
			rs = pstmt.executeQuery();
			if (rs.next()) {
				musicFilesInfoBean = new MusicFilesInfoBean();
				musicFilesInfoBean.setSong_ID(rs.getInt("emp_id"));
				musicFilesInfoBean.setSong_Title(rs.getString("emp_name"));
				musicFilesInfoBean.setArtist_Name(rs.getInt("age"));
				musicFilesInfoBean.setAlbum_name(rs.getDouble("salary"));
				musicFilesInfoBean.setSong_Location(rs.getString("designation"));
				musicFilesInfoBean.setDescription(rs.getLong("mobile"));

			} catch (ClassNotFoundException | SQLException e) {
				e.printStackTrace();
			}


			return null;
		}

	}
